{
  "name": "react-plyr",
  "version": "2.1.0-alpha.0",
  "description": "A simple, accessible HTML5 media player React Component",
  "homepage": "https://github.com/xDae/react-plyr",
  "bugs": {
    "url": "https://github.com/xDae/react-plyr/issues"
  },
  "license": "MIT",
  "author": "Jose Miguel Bejarano",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xDae/react-plyr.git"
  },
  "scripts": {
    "build": "npm run clean && babel src --out-dir lib --ignore test.js,setupTests.js",
    "prepare": "npm run clean && babel src --out-dir lib --ignore test.js,setupTests.js",
    "clean": "rimraf lib",
    "test": "jest && npm run test:lint",
    "test:coverage": "jest --coverage",
    "test:lint": "eslint src",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o docs"
  },
  "dependencies": {
    "plyr": "^3.3.7",
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.3",
    "@storybook/addon-info": "^3.4.3",
    "@storybook/addon-links": "^3.4.3",
    "@storybook/addon-options": "^3.4.3",
    "@storybook/addons": "^3.4.3",
    "@storybook/react": "^3.4.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "raf": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/setupTests.js"
    ],
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|docs|node_modules)/"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
